
@section Styles {
    <!-- DataTables -->
    <link rel="stylesheet" href="~/admin/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="~/admin/plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
}

@section Scripts {
    <!-- DataTables -->
    <script src="~/admin/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/admin/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/admin/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/admin/plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script>

    <script>
        $(function () {
            $('#conpanyRequestTable').DataTable({
                'responsive': true,
                'serverSide': true,
                'processing': true,
                'paging': true,
                'ajax': {
                    url: '/Admin/Dashboard/GetRequests',
                    type: 'GET',
                    dataType: 'json'
                },
                'columnDefs': [
                    {
                        'orderable': false,
                        'targets': 0,
                        'render': function (data, type, row) {
                            var arr = data.split('$');
                            return `<img src="` + arr[1] + `" alt="" style="height: 30px; width: 30px" class="img-circle elevation-2"/> <span class="text-bold"><a href="#">` + arr[0] + `</a></span>`;
                        }
                    },
                    {
                        'orderable': false,
                        'targets': 4,
                        'render': function (data, type, row) {
                            return `<div class="d-inline-block">
                                        <a href="/admin/Dashboard/Details/${data}" class="btn btn-outline-success btn-sm"><i class="fa fa-eye" aria-hidden="true" style="color: darkblue"></i> View Details</a>
                                    </div>`;
                        }
                    },
                    {
                        'orderable': false,
                        'targets': 3,
                        'render': function (data, type, row) {
                            let backColor = 'yellow';
                            if (data == 'Rejected') backColor = 'red';
                            else if (data == 'Approved') backColor = 'green';

                            return `<div style="background-color: ` + backColor + `; width: 75%; text-align: center; margin-left: 17px; border-radius: 45%;"><p>` + data + `</p></div>`;
                        }
                    }
                ]
            });
        });
    </script>
}


<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">List of comapny request</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <table id="conpanyRequestTable" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>User</th>
                            <th>Description</th>
                            <th>Request Date</th>
                            <th>Request Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                    <tfoot>
                        <tr>
                            <th>User</th>
                            <th>Description</th>
                            <th>Request Date</th>
                            <th>Request Status</th>
                            <th>Action</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
    <!-- /.col -->
</div>
<!-- /.row -->
