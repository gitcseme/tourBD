@model CompanyRequestDetailViewModel

@section Styles {
    <style>
        .info a.requester:hover {
            text-decoration: underline;
            color: blue !important;
        }
    </style>
}

<div class="container-fluid">
    <div class="row">
        <div class="card col-lg-12">
                <div class="card-header row">
                    <div class="user-panel mt-3 pb-3 d-flex col-lg-3">
                        <div class="image">
                            <img src="@Model.UserImageUrl" class="img-circle" alt="User Image" style="height: 33px; width: 33px; margin-top: 4px">
                        </div>
                        <div class="info">
                            <a asp-area="" asp-controller="Account" asp-action="Profile" asp-route-userId="@Model.UserId" class="requester d-block" style="margin-top: 5px; color: black; font-weight: 600">@Model.UserName</a>
                        </div>
                    </div>
                    <div class="col-lg-6 mt-4">
                        <div class="row">
                            <p style="font-weight: 600">Requested on: </p> <span class="ml-3">@Model.RequestedDate</span>
                        </div>
                    </div>
                    <div class="col-lg-3 mt-4">
                        <div class="row">
                            <p style="font-weight: 600">Status: </p> <span class="ml-3">@Model.RequestStatus</span>
                        </div>
                    </div>
                </div>
            <div class="row">
                <div class="card-body">
                    <h4>Description:</h4>
                    <div>
                        @Model.Description
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="card-footer">
                    <a asp-controller="Dashboard" asp-action="ApproveRequest" asp-area="Admin" asp-route-requestId="@Model.CompanyRequestId" class="btn btn-primary">Approve</a>
                    <a asp-controller="Dashboard" asp-action="RejectRequest" asp-area="Admin" asp-route-requestId="@Model.CompanyRequestId" class="btn btn-danger">Reject</a>
                </div>
            </div>
        </div>
    </div>
</div>
