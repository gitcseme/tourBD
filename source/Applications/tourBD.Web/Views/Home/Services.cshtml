
@section Styles {

    <!-- Google fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Modak&display=swap" rel="stylesheet">
    <!-- Google fonts -->

    <link href="~/css/home/home-services.css" rel="stylesheet" />

    <style>
        ul.why-points {
            list-style: none;
        }

        ul.why-points li::before {
            content: "✅";
            display: inline-block;
            margin-right: 0.2rem;
        }

        ul.why-points li {
            font-size: 20px;
            font-family: monospace;
            color: darkblue;
        }
    </style>
}

<section class="why-tourBD">
    <div class="container-fluid">
        <div class="row service-heading">
            <div class="col-md-12 service-wrapper">
                <h2 class="section-heading">WHY <span class="site-name">TOURBD</span></h2>
                <hr />
            </div>
        </div>
        <div class="why-text row justify-content-center">
            <div class="col-md-8">
                <ul class="why-points">
                    <li>Completely dedicated to tourism mainly focusing on Bangladesh</li>
                    <li>A place where public and tour providers meets</li>
                    <li>A competitive environment creator among tour providers which gives you the best offers</li>
                    <li>Consists of all licenced tour providers in BD</li>
                    <li>A fast growing helping community</li>
                </ul>
            </div>
        </div>
    </div>
</section>

<section class="our-services">
    <div class="container-fluid">
        <div class="row service-heading">
            <div class="col-md-12 service-wrapper">
                <h2 class="section-heading">OUR SERVICES</h2>
                <hr />
            </div>
        </div>

        <div class="row forum-service single-service">
            <div class="col-md-4">
                <div class="service-name">
                    <h3>A DEDICATED FORUM</h3>
                </div>
                <div class="service-description">
                    <ul class="imp-points">
                        <li>User friendly interface</li>
                        <li>Basic forum with Post, comment, replay system</li>
                        <li>Author has complete command on post</li>
                    </ul>
                </div>
            </div>
            <div class="col-md-8 forum-pics">
                <div class="ref-1">
                    <img src="~/img/service/post.PNG" alt="forum post" class="img-fluid" />
                </div>
            </div>
        </div>

        <div class="row company-service single-service">
            <div class="col-md-8 company-pics">
                <div class="row">
                    <div class="col-md-6">
                        <div class="row justify-content-center">
                            <div class="service-partition">
                                <h4>Company</h4>
                            </div>
                        </div>
                        <div class="ref-1">
                            <img src="~/img/service/company.JPG" alt="forum post" class="img-fluid" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="row justify-content-center">
                            <div class="service-partition">
                                <h4>Package</h4>
                            </div>
                        </div>
                        <div class="ref-1">
                            <img src="~/img/service/package.PNG" alt="forum post" class="img-fluid" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="service-name">
                    <h3>VIRTUAL COMPANY SERVICE</h3>
                </div>
                <div class="service-description">
                    <ul class="imp-points">
                        <li>User friendly interface</li>
                        <li>Basic forum with Post, comment, replay system</li>
                        <li>Author has complete command on post</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>


