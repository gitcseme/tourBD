@model tourBD.Web.Models.Home.HomeModel

@section Styles {

    <!-- Google fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Modak&display=swap" rel="stylesheet">
    <!-- Google fonts -->

    <link href="~/css/home/home-index.css" rel="stylesheet" />
}

<div class="content top-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="tourBD-info">
                    <h1>tour <span class="bd">BD</span></h1>
                </div>
            </div>
        </div>
        <div class="row justify-content-end">
            <div class="col-md-4">
                <div class="famous-quote">
                        <p class="the-quote">"Travel is a fools paradise."</p>
                        <p class="quote-author">--Ralph Waldo Emerson</p>
                </div>
            </div>
        </div>
    </div>
</div>

<section class="conpanies">
    <div class="container-fluid">
        <div class="row conpany-section">
            <div class="col-md-12">
                <h3>RECENT ACTIVITY</h3>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-8">
                @foreach (var post in Model.Posts)
                {
                    <a asp-controller="Forum" asp-action="ViewPost" asp-route-postId="@post.PostId" class="row single-post">
                        <div class="author-profile-pic col-auto">
                            <img src="@post.AuthorImageUrl" alt="profile-pic" id="author-pic" />
                            <span class="author-user-name">@post.AuthorName</span>
                        </div>
                        <div class="col message">
                            <p>
                                @post.Message
                            </p>
                        </div>
                    </a>
                }
            </div>
        </div>

        <div class="row conpany-section">
            <div class="col-md-12">
                <h3>OUR TOUR PROVIDERS</h3>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="row">
                    @foreach (var company in Model.Companies)
                    {
                        <div class="col-md-4">
                            <a asp-controller="Company" asp-action="CompanyPublicView" asp-route-companyId="@company.Id.ToString()" class="company-logo">
                                <img src="@company.CompanyLogoUrl" alt="LOGO" title="@company.CompanyName" />
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>


@section Scripts {


}

