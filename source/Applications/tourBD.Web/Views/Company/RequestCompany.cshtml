@model tourBD.Web.Models.CompanyModels.CompanyRequestModel

@section Styles {
    <style>
        .request-title {
            text-align: center;
            font-size: 25px;
            font-family: Algerian;
        }

        span.official-email {
            color: blueviolet;
            font-style: italic;
            margin-left: 5px;
        }
    </style>
}

<div class="content">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <form method="post" asp-controller="Company" asp-action="RequestCompany" id="request-form">
                        <div class="form-group">
                            <div class="card-header">
                                <div class="request-title">
                                    <label>Company request form</label>
                                </div>
                                <label class="label" asp-for="Description">Describe your company(name, location,...etc)</label>
                                <p><small>Send your company license or other related data to <span class="official-email">@Model.OfficialEmail</span>. <span style="color: darkred;">Send from your tourBD account email</span></small></p>
                            </div>
                            <div class="card-body">
                                <textarea name="Description" cols="20" rows="7" class="form-control" id="Description" placeholder="Write your company details"></textarea>
                            </div>
                            <div class="card-footer">
                                <button class="btn btn-primary" onclick="Notify()">Submit request</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <script type="text/javascript">
        function Notify() {

            $('#request-form').submit(function () {
                Swal.fire({
                    position: 'top-end',
                    icon: 'success',
                    title: 'Your request is submitted, please wait',
                    showConfirmButton: true,
                    timer: 2000
                })
            });

        }
    </script>

}